@model CoreDemo.Model.Student
@addTagHelper*, Microsoft.AspNetCore.Mvc.TagHelpers
@{
	ViewData["Title"] = "Create Student";
	Layout = "_Layout";
}

<h4>Exam List</h4>

<form asp-action="processStudentTask" asp-controller="student" id="form0"
	  data-ajax="true" data-ajax-method="POST"
	  data-ajax-begin="OnBegin" data-ajax-failure="OnFailure"
	  data-ajax-success="OnSuccess" data-ajax-complete="OnComplete">
	<div asp-validation-summary="ModelOnly" class="text-danger"></div>
	<div class="row">
		<div class="col-md-3">
			<label asp-for="FirstName">First Name</label>
			<input asp-for="FirstName" class="form-control" type="text" />

			<input asp-for="Id" class="form-control" type="hidden" />
			<span asp-validation-for="FirstName" class="text-danger"></span>
		</div>
		<div class="col-md-3">
			<label asp-for="LastName">Last Name</label>
			<input asp-for="LastName" class="form-control" type="text" />
			<span asp-validation-for="LastName" class="text-danger"></span>
		</div>
		<div class="col-md-3">
			<label asp-for="DOB">DOB</label>
			<input asp-for="DOB" class="form-control" type="date" />
			<span asp-validation-for="DOB" class="text-danger"></span>
		</div>
	</div>

	<div class="row">

		<div class="col-md-3">
			<label asp-for="GenderID">Select Gender</label>
			<select asp-for="GenderID" class="form-control" asp-items="@(new SelectList(@ViewBag.gender,"Value", "Text"))">
				<option value="" hidden disabled selected>Select </option>
			</select>
			<span asp-validation-for="GenderID" class="text-danger"></span>

		</div>
		<div class="col-md-3">
			<label asp-for="StudNum">Student Number</label>
			<input asp-for="StudNum" class="form-control" type="text" />
			<span asp-validation-for="StudNum" class="text-danger"></span>

		</div>
		<div class="col-md-3">
			<label asp-for="EmailAddress">Email</label>
			<input asp-for="EmailAddress" class="form-control" type="email" />
			<span asp-validation-for="EmailAddress" class="text-danger"></span>

		</div>

	</div>

	<div class="row">
		<div class="col-md-3">
			<label asp-for="PinCode">Pin Code</label>
			<input asp-for="PinCode" class="form-control" type="text" />
			<span asp-validation-for="PinCode" class="text-danger"></span>

		</div>
		<div class="col-md-3">
			<label asp-for="MobileNo">Mobile No</label>
			<input asp-for="MobileNo" class="form-control" type="text" />
			<span asp-validation-for="MobileNo" class="text-danger"></span>

		</div>
		
	</div>

	<div class="row">
		<div class="col-md-12">
			<label asp-for="Address">Address</label>
			<input asp-for="Address" class="form-control" type="text" multiple />
			<span asp-validation-for="PinCode" class="text-danger"></span>

		</div>
		

	</div>
	<div class="row">
		<div class="col-md-3">
		<input type="submit" value="Save" class="btn btn-outline-success" style="margin-top:20px !important;" />
    	</div>


	</div>
</form>

<div style="margin-top:20px;">
	<table class="table table-bordered " id="taskTable">
	</table>
</div>
@section Scripts
	{
	<partial name="_ValidationScriptsPartial" />

	<script type="text/javascript">
		function OnBegin() {

		}

		function OnFailure(response) {
			
			alert(response.responseJSON);
		}

		function OnSuccess(response) {
			alert(response);
		}

		function OnComplete() {
			$("#form0")[0].reset()
			$("#Id").val(0)
			window.location.href='../../student'
		}
	</script>
	<script>
		$(document).ready(function () {

			$("#FirstName").removeAttr("maxlength")
			$("#LastName").removeAttr("maxlength")
			$("#StudNum").removeAttr("maxlength")
			$("#PinCode").removeAttr("maxlength")
			$("#EmailAddress").removeAttr("maxlength")
			$("#MobileNo").removeAttr("maxlength")

			
		})
		
	</script>
	}