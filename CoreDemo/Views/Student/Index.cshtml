@model List<CoreDemo.Model.Student>
@addTagHelper*, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Student List";
    Layout = "_Layout";
}


<div class="row">
    <div class="float-md-end">
        <div class="col-md-3 form-control">
            <a href="../student/Create" class="btn btn-primary">Add New</a>

        </div>
    </div>
</div>

<div class="row">
    <div class="table table-responsive">
        <table class="table table-striped">
            <tr>
                <th>Sno</th>
                <th>Name</th>
                <th>Email</th>
                <th>Student Number</th>
                <th>Mobile</th>
                <th>Action</th>
               
            </tr>
            @foreach(var item in Model)
            {
                <tr>
                   @{ var index = 0;
                    index = index + 1;
                    }
                    <td>@index</td>
                    <td>@(string.Format("{0} {1}",item.FirstName,item.LastName))</td>
                    <td>@item.EmailAddress</td>
                    <td>@item.StudNum</td>
                    <td>@item.MobileNo</td>
                    <td>
                        @Html.ActionLink("Edit","EditStudent","student",new{id=item.Id}, new {@class = "btn btn-success"})
                    </td>
                </tr>
                
            }
        </table>
    </div>
</div>